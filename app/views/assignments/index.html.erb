<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table class="table">
  <thead class = "thead-dark">
    <tr>
      <th>Class</th>
      <th>Name</th>
      <th>Assignment test</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.class_id %></td>
        <td><%= assignment.name %></td>
        <td><%= assignment.assignment_test %></td>
        <td><%= assignment.due_date %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

